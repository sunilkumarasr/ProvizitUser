<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relative_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/appbarlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:titleTextColor="#ffffff">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/emp_img"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_user_white"
                                app:civ_border_color="@color/colorPrimary"
                                app:civ_border_width="1dp" />

                            <TextView
                                android:id="@+id/emp_name"
                                style="@style/regular_font"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="5dp"
                                android:layout_toEndOf="@+id/emp_img"
                                android:background="?attr/selectableItemBackground"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text=""
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/emp_role"
                                style="@style/bold_font"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/emp_name"
                                android:layout_marginLeft="7dp"
                                android:layout_toRightOf="@+id/emp_img"
                                android:text="Role"
                                android:textColor="@color/colorPrimary"
                                android:textSize="8sp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:background="?attr/selectableItemBackground">

                                <TextView
                                    android:id="@+id/logout"
                                    android:layout_width="@dimen/icon"
                                    android:layout_height="@dimen/icon"
                                    android:background="@drawable/ic_logout"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2.5">

                            <LinearLayout
                                android:id="@+id/linear_noti"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/img_reports"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/reports_icc"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/img_notifications"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/notifications_home_ic"
                                    android:visibility="gone" />

                                <FrameLayout
                                    android:id="@+id/frame_layout_notifications"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/notifications_home_ic" />

                                    <TextView
                                        android:id="@+id/txt_notifications_count"
                                        android:layout_width="19dp"
                                        android:layout_height="19dp"
                                        android:layout_gravity="right|end|top"
                                        android:background="@drawable/cart_circle_round"
                                        android:gravity="center"
                                        android:padding="1dp"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorAccent"
                                        android:textSize="9dp" />
                                </FrameLayout>

                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linear_bottom"
                android:layout_below="@+id/appbarlayout"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_above="@+id/linear_bottom"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/linear_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="2"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/linearlayout_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_home"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_home75"
                        app:tint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/txt_home"
                        style="@style/medium_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/home"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_meetingroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_meeting"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_meeting_room"
                        app:tint="@color/gray" />

                    <TextView
                        android:id="@+id/txt_meeting"
                        style="@style/medium_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/meeting_rooms"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</layout>